<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        tools:context=".Second">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:gravity="center"
            android:background="@color/top_bottom_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YY"
                android:textSize="@dimen/second_tv_text_size"
                android:id="@+id/second_tv_yy"
                android:textColor="@color/black_second" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX/"
                android:textSize="@dimen/second_tv_text_size"
                android:id="@+id/second_tv_xx"
                android:textColor="@color/black_second" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:orientation="horizontal"
            android:background="@color/mid_color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/second_tv_question"
                android:textColor="@color/black_second"
                android:text="questions"
                android:textSize="@dimen/second_tv_text_size"
                android:layout_marginTop="12dp"
                android:layout_marginStart="8dp"
                android:padding="4dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="@dimen/second_button_voice_width"
                android:layout_height="@dimen/second_button_voice_height"
                android:id="@+id/second_btn_voice"
                android:background="@drawable/btn_voice_sate"
                android:layout_marginTop="12dp"
                android:layout_marginStart="8dp"
                android:padding="4dp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:orientation="vertical"
            android:background="@color/mid_color">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/second_tv_answer"
                        android:textSize="@dimen/second_tv_text_size"
                        android:text="@string/second_answer_text"
                        android:layout_marginStart="8dp"
                        android:padding="4dp"
                        android:textColor="@color/black_second" />
                </LinearLayout>

            </ScrollView>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:background="@color/top_bottom_color"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="@dimen/second_btn_bottom_width"
                android:layout_height="@dimen/second_btn_bottom_height"
                android:id="@+id/second_btn_next"
                android:background="@drawable/second_btn_next"
                android:layout_marginEnd="20dp" />


            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="@dimen/second_btn_bottom_width"
                android:layout_height="@dimen/second_btn_bottom_height"
                android:id="@+id/second_btn_answer"
                android:background="@drawable/second_btn_answer" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="@dimen/second_btn_bottom_width"
                android:layout_height="@dimen/second_btn_bottom_height"
                android:id="@+id/second_btn_back"
                android:background="@drawable/second_btn_back"
                android:layout_marginStart="20dp" />

        </LinearLayout>


    </LinearLayout>
</layout>
